      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 16px;
      margin-bottom: 40px;
      text-align: center;
    }

    .about__mobile-tagline {
      display: flex;
      align-items: center;
      gap: 6px;
      cursor: default;
    }

    .about__mobile-tagline-icon {
      width: 11px;
      height: 11px;
      background: var(--color-orange-primary);
      flex-shrink: 0;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .about__mobile-tagline:hover .about__mobile-tagline-icon {
      transform: rotate(45deg) scale(1.2);
      box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
    }

    .about__mobile-tagline-text {
      font-family: var(--font-manrope);
      font-size: 16px;
      font-weight: 400;
      text-transform: uppercase;
      color: var(--color-white);
      letter-spacing: 0.5px;
      transition: letter-spacing 0.3s ease;
    }

    .about__mobile-tagline:hover .about__mobile-tagline-text {
      letter-spacing: 2px;
    }

    .about__mobile-headline {
      font-family: var(--font-manrope);
      font-size: 32px;
      font-weight: 400;
      line-height: 120%;
      color: var(--color-gray-medium);
      margin: 0;
      max-width: 100%;
    }

    .about__mobile-headline--highlight {
      color: var(--color-white);
      position: relative;
      display: inline-block;
      transition: color 0.3s ease;
    }

    .about__mobile-headline--highlight::after {
      content: '';
      position: absolute;
      bottom: 2px;
      left: 0;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--color-orange-primary), var(--color-orange-light));
      transition: width 0.4s ease;
    }

    .about__mobile-headline--highlight:hover {
