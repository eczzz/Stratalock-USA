      align-items: center;
    }

    /* Hide desktop tagline and headline on mobile */
    .about__tagline--desktop,
    .about__headline--desktop {
      display: none;
    }

    .about__stat-label {
      max-width: 100%;
    }

    .about__team-strip {
      flex-wrap: wrap;
      justify-content: center;
    }

    .about__description {
      font-size: 18px;
      line-height: 27px;
      color: var(--color-white);
      text-align: center;
    }

    .about__headline {
      font-size: 28px;
    }

    .about__image-wrapper {
      width: 100%;
      aspect-ratio: 518 / 428;
      min-height: 280px;
      max-height: 400px;
    }

    .about__image {
      width: 100%;
      height: 100%;
    }

    .about__experience {
      flex-direction: column;
      gap: 8px;
      text-align: center;
    }

    .about__experience-label {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .about {
      padding: 30px 0;
    }

    .about__container {
      padding: 0 16px;
    }

    .about__mobile-headline {
      font-size: 26px;
    }

    .about__stats-bar {
      gap: 24px;
    }

    .about__stat-number {
      font-size: 32px;
    }

    .about__stat-label {
      font-size: 14px;
    }

    .about__image-wrapper {
      width: 100%;
      aspect-ratio: 518 / 428;
      min-height: 220px;
      max-height: 320px;
    }

    .about__image {
      width: 100%;
      height: 100%;
    }

    .about__team-strip {
      gap: 12px;
      padding: 10px;
      margin: -10px;
    }

    .about__avatar {
      width: 35px;
      height: 35px;
    }

    .about__experience-number {
      font-size: 26px;
    }

    .about__experience-label {
      font-size: 14px;
      line-height: 20px;
    }

    .about__description {
      font-size: 16px;
      line-height: 24px;
    }
  }

  /* Scroll Animations */
  .scroll-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .scroll-animate--delay-1 {
    transition-delay: 0.15s;
  }

  .scroll-animate--delay-2 {
    transition-delay: 0.3s;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Faster animations on mobile to prevent scroll blocking */
  @media (max-width: 768px) {
    .scroll-animate {
      transform: translateY(20px);
      transition: opacity 0.3s ease-out, transform 0.3s ease-out;
    }

    .scroll-animate--delay-1,
    .scroll-animate--delay-2 {
      transition-delay: 0s;
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-animate {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .about__stat,
    .about__stat-number,
    .about__stat-accent,
    .about__stat-label,
    .about__divider,
    .about__image,
    .about__image-wrapper::after,
    .about__avatar,
    .about__team-strip,
    .about__team-divider,
    .about__experience,
    .about__experience-number,
    .about__experience-label,
    .about__tagline-icon,
    .about__tagline-text,
    .about__headline--highlight,
    .about__headline--highlight::after,
    .about__mobile-tagline-icon,
    .about__mobile-tagline-text,
    .about__mobile-headline--highlight,
    .about__mobile-headline--highlight::after {
      transition: none;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Count-up animation function
    function animateCountUp(element) {
      const target = parseInt(element.dataset.target, 10);
      const duration = 2000;
      const startTime = performance.now();

      function updateCount(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);

        // Easing function for smooth deceleration
        const easeOut = 1 - Math.pow(1 - progress, 3);
        const current = Math.floor(easeOut * target);

        element.textContent = current;

        if (progress < 1) {
          requestAnimationFrame(updateCount);
        } else {
          element.textContent = target;
        }
      }

      requestAnimationFrame(updateCount);
    }

    // Scroll animation observer
    const observerOptions = {
      root: null,
      rootMargin: '0px 0px -50px 0px',
      threshold: 0.15
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');

          // Trigger count-up for stats in this element
          entry.target.querySelectorAll('.count-up').forEach(counter => {
            animateCountUp(counter);
          });

          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.about .scroll-animate').forEach(el => {
      observer.observe(el);
    });
  });
</script>
