---
import Button from './Button.astro';

const trustBadges = [
  'Licensed & Insured Contractors',
  '40+ Years Combined Experience',
  'Minimal Disruption Guaranteed'
];
---

<section class="get-started">
  <div class="get-started__container">
    <!-- Tagline -->
    <div class="get-started__tagline scroll-animate">
      <span class="get-started__tagline-icon"></span>
      <span class="get-started__tagline-text">GET STARTED</span>
    </div>

    <!-- Headline -->
    <h2 class="get-started__headline scroll-animate scroll-animate--delay-1">
      Concerned About Your Foundation? <span class="get-started__headline--highlight">We Can Help.</span>
    </h2>

    <!-- Description -->
    <p class="get-started__description scroll-animate scroll-animate--delay-2">
      Get a free assessment from our geotechnical experts and discover how polymer injection can stabilize your foundationâ€”fast.
    </p>

    <!-- CTA Button -->
    <div class="get-started__cta scroll-animate scroll-animate--delay-3">
      <Button text="Get Free Estimate" size="large" href="/estimate" />
    </div>

    <!-- Phone CTA -->
    <div class="get-started__phone scroll-animate scroll-animate--delay-4">
      <svg class="get-started__phone-icon" width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 0.5V18.5M1 9.5H19" stroke="white" stroke-width="1.5"/>
      </svg>
      <span class="get-started__phone-text">
        Or Call: <a href="tel:8558505625" class="get-started__phone-number">(855) 850-5625</a>
      </span>
    </div>

    <!-- Trust Badges -->
    <div class="get-started__badges scroll-animate scroll-animate--delay-5">
      {trustBadges.map((badge) => (
        <div class="get-started__badge">
          <div class="get-started__badge-icon">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 7L6 11L12 3" stroke="#FA7523" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="get-started__badge-text">{badge}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .get-started {
    background: var(--color-bg-dark-1);
    padding: 100px 0;
  }

  .get-started__container {
    max-width: 850px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  /* Tagline */
  .get-started__tagline {
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: default;
  }

  .get-started__tagline-icon {
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    flex-shrink: 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .get-started__tagline:hover .get-started__tagline-icon {
    transform: rotate(45deg) scale(1.2);
    box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
  }

  .get-started__tagline-text {
    font-family: var(--font-manrope);
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: 0.5px;
    transition: letter-spacing 0.3s ease;
  }

  .get-started__tagline:hover .get-started__tagline-text {
    letter-spacing: 2px;
  }

  /* Headline */
  .get-started__headline {
    font-family: var(--font-manrope);
    font-size: 48px;
    font-weight: 400;
    line-height: 120%;
    color: var(--color-gray-medium);
    text-align: center;
    margin: 0;
    max-width: 727px;
  }

  .get-started__headline--highlight {
    color: var(--color-white);
    position: relative;
    display: inline;
    background-image: linear-gradient(90deg, var(--color-orange-primary), var(--color-orange-light));
    background-size: 0% 3px;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: color 0.3s ease, background-size 0.4s ease;
    cursor: default;
  }

  .get-started__headline--highlight:hover {
    color: var(--color-orange-light);
    background-size: 100% 3px;
  }

  /* Description */
  .get-started__description {
    font-family: var(--font-poppins);
    font-size: 20px;
    font-weight: 400;
    line-height: 30px;
    color: var(--color-gray-medium);
    text-align: center;
    margin: 0;
    max-width: 670px;
    margin-top: 20px;
  }

  /* CTA Button */
  .get-started__cta {
    margin-top: 30px;
  }

  /* Phone */
  .get-started__phone {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 20px;
    cursor: default;
    transition: transform 0.3s ease;
  }

  .get-started__phone:hover {
    transform: translateX(4px);
  }

  .get-started__phone-icon {
    flex-shrink: 0;
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .get-started__phone:hover .get-started__phone-icon {
    transform: rotate(90deg);
    filter: drop-shadow(0 0 8px rgba(250, 117, 35, 0.5));
  }

  .get-started__phone-icon path {
    transition: stroke 0.3s ease;
  }

  .get-started__phone:hover .get-started__phone-icon path {
    stroke: var(--color-orange-primary);
  }

  .get-started__phone-text {
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-medium);
    transition: color 0.3s ease;
  }

  .get-started__phone:hover .get-started__phone-text {
    color: var(--color-white);
  }

  .get-started__phone-number {
    color: var(--color-gray-medium);
    text-decoration: none;
    transition: color 0.3s ease, text-shadow 0.3s ease;
  }

  .get-started__phone-number:hover {
    color: var(--color-orange-light);
    text-shadow: 0 0 15px rgba(250, 117, 35, 0.3);
  }

  /* Trust Badges */
  .get-started__badges {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 30px;
    margin-top: 50px;
  }

  .get-started__badge {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: default;
    transition: transform 0.3s ease;
  }

  .get-started__badge:hover {
    transform: translateY(-2px);
  }

  .get-started__badge-icon {
    width: 24px;
    height: 24px;
    background: #090909;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  }

  .get-started__badge:hover .get-started__badge-icon {
    transform: scale(1.15);
    box-shadow: 0 0 15px rgba(250, 117, 35, 0.4);
    background: #0f0f0f;
  }

  .get-started__badge-icon svg {
    transition: transform 0.3s ease;
  }

  .get-started__badge:hover .get-started__badge-icon svg {
    transform: scale(1.1);
  }

  .get-started__badge-icon path {
    transition: stroke 0.3s ease, filter 0.3s ease;
  }

  .get-started__badge:hover .get-started__badge-icon path {
    stroke: var(--color-orange-light);
    filter: drop-shadow(0 0 3px rgba(250, 117, 35, 0.5));
  }

  .get-started__badge-text {
    font-family: var(--font-poppins);
    font-size: 14px;
    font-weight: 400;
    line-height: 160%;
    color: var(--color-white);
    white-space: nowrap;
    transition: text-shadow 0.3s ease, color 0.3s ease;
  }

  .get-started__badge:hover .get-started__badge-text {
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
    color: var(--color-orange-light);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .get-started__badges {
      flex-wrap: wrap;
      gap: 20px 30px;
    }
  }

  @media (max-width: 900px) {
    .get-started__badges {
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }
  }

  @media (max-width: 768px) {
    .get-started {
      padding: 60px 0;
    }

    .get-started__container {
      padding: 0 20px;
      gap: 24px;
    }

    .get-started__headline {
      font-size: 32px;
    }

    .get-started__description {
      font-size: 18px;
      line-height: 27px;
      margin-top: 10px;
    }

    .get-started__cta {
      margin-top: 20px;
    }

    .get-started__phone {
      margin-top: 10px;
    }

    .get-started__badges {
      flex-direction: column;
      align-items: center;
      gap: 20px;
      margin-top: 30px;
    }

    .get-started__badge-text {
      white-space: normal;
    }
  }

  @media (max-width: 480px) {
    .get-started__headline {
      font-size: 28px;
    }

    .get-started__description {
      font-size: 16px;
      line-height: 24px;
    }

    .get-started__badges {
      width: 100%;
    }

    .get-started__badge {
      width: 100%;
      max-width: 300px;
    }
  }

  /* Scroll Animations */
  .scroll-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .scroll-animate--delay-1 {
    transition-delay: 0.1s;
  }

  .scroll-animate--delay-2 {
    transition-delay: 0.2s;
  }

  .scroll-animate--delay-3 {
    transition-delay: 0.3s;
  }

  .scroll-animate--delay-4 {
    transition-delay: 0.4s;
  }

  .scroll-animate--delay-5 {
    transition-delay: 0.5s;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Faster animations on mobile to prevent scroll blocking */
  @media (max-width: 768px) {
    .scroll-animate {
      transform: translateY(20px);
      transition: opacity 0.3s ease-out, transform 0.3s ease-out;
    }

    .scroll-animate--delay-1,
    .scroll-animate--delay-2,
    .scroll-animate--delay-3,
    .scroll-animate--delay-4,
    .scroll-animate--delay-5 {
      transition-delay: 0s;
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-animate {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .get-started__tagline-icon,
    .get-started__tagline-text,
    .get-started__headline--highlight,
    .get-started__phone,
    .get-started__phone-icon,
    .get-started__phone-icon path,
    .get-started__phone-text,
    .get-started__phone-number,
    .get-started__badge,
    .get-started__badge-icon,
    .get-started__badge-icon svg,
    .get-started__badge-icon path,
    .get-started__badge-text {
      transition: none;
    }
  }
</style>

<script is:inline>
  (function() {
    function initGetStartedAnimations() {
      var elements = document.querySelectorAll('.get-started .scroll-animate');
      if (elements.length === 0) return;

      // Check if element is in viewport
      function isInViewport(el) {
        var rect = el.getBoundingClientRect();
        return (
          rect.top < (window.innerHeight || document.documentElement.clientHeight) &&
          rect.bottom > 0
        );
      }

      var observerOptions = {
        root: null,
        rootMargin: '0px 0px -50px 0px',
        threshold: 0.1
      };

      var observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      elements.forEach(function(el) {
        // If already in viewport, add visible class immediately
        if (isInViewport(el)) {
          el.classList.add('is-visible');
        } else {
          observer.observe(el);
        }
      });
    }

    function runInit() {
      requestAnimationFrame(function() {
        requestAnimationFrame(initGetStartedAnimations);
      });
    }

    // Run on DOMContentLoaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', runInit);
    } else {
      runInit();
    }

    // Also run on Astro page load (for view transitions)
    document.addEventListener('astro:page-load', runInit);
  })();
</script>
