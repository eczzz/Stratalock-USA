---
import Button from './Button.astro';
---

<section class="hero">
  <div class="hero__container">
    <div class="hero__content">
      <div class="hero__stats-features">
        <div class="hero__stats">
          <div class="hero__stats-number">
            40<span class="hero__stats-plus">+</span>
          </div>
          <div class="hero__stats-label">Years Experience</div>
        </div>

        <div class="hero__divider"></div>

        <div class="hero__features">
          <div class="hero__feature">
            <svg class="hero__feature-icon" width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 0.5V18.5M1 9.5H19" stroke="white" stroke-width="1.5"/>
            </svg>
            <span class="hero__feature-text">
              Deep Soil Injection <span class="hero__feature-text--highlight">Technology</span>
            </span>
          </div>

          <div class="hero__feature">
            <svg class="hero__feature-icon" width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10 0.5V18.5M1 9.5H19" stroke="white" stroke-width="1.5"/>
            </svg>
            <span class="hero__feature-text">
              Solutions for <span class="hero__feature-text--highlight">Residential & Commercial</span>
            </span>
          </div>
        </div>
      </div>

      <div class="hero__tagline">
        <span class="hero__tagline-icon"></span>
        <span class="hero__tagline-text">GEOTECHNICAL EXPERTS</span>
      </div>

      <h1 class="hero__headline">
        Foundation Repair That Addresses The Root Cause: <span class="hero__headline--gradient">Weak Soil.</span>
      </h1>

      <div class="hero__cta">
        <Button text="Free Estimate" size="large" href="/estimate" />
      </div>

      <div class="hero__phone">
        <svg class="hero__phone-icon" width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 0.5V18.5M1 9.5H19" stroke="white" stroke-width="1.5"/>
        </svg>
        <span class="hero__phone-text">
          Or Call: <a href="tel:8558505625" class="hero__phone-number">(855) 850-5625</a>
        </span>
      </div>
    </div>

    <div class="hero__image-container">
      <div class="hero__image-wrapper">
        <img
          src="/images/strata-lock-hero-v1.webp"
          alt="Stratalock foundation repair team at work"
          class="hero__image"
        />
        <div class="hero__image-fade"></div>
      </div>

      <div class="hero__grid-overlay">
        <svg class="hero__grid-svg" viewBox="0 0 621 775" fill="none" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="heroTightGrid" width="60" height="60" patternUnits="userSpaceOnUse">
              <path d="M 60 0 L 0 0 0 60" fill="none" stroke="rgba(255, 255, 255, 0.15)" stroke-width="1"/>
            </pattern>
            <linearGradient id="heroGridFade" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="white" stop-opacity="0"/>
              <stop offset="50%" stop-color="white" stop-opacity="0.5"/>
              <stop offset="100%" stop-color="white" stop-opacity="1"/>
            </linearGradient>
            <mask id="heroGridMask">
              <rect width="100%" height="100%" fill="url(#heroGridFade)"/>
            </mask>
          </defs>
          <rect width="100%" height="100%" fill="url(#heroTightGrid)" mask="url(#heroGridMask)" />
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    background: linear-gradient(270deg, var(--color-bg-dark-1) 58.76%, var(--color-bg-dark-2) 100%);
  }

  .hero__container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 64px 150px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    padding-top: 80px;
  }

  /* Load Animations */
  @keyframes heroFadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes heroFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .hero__stats-features {
    animation: heroFadeUp 0.8s ease-out forwards;
    animation-delay: 0.1s;
    opacity: 0;
  }

  .hero__tagline {
    animation: heroFadeUp 0.8s ease-out forwards;
    animation-delay: 0.25s;
    opacity: 0;
  }

  .hero__headline {
    animation: heroFadeUp 0.8s ease-out forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }

  .hero__cta {
    animation: heroFadeUp 0.8s ease-out forwards;
    animation-delay: 0.55s;
    opacity: 0;
  }

  .hero__phone {
    animation: heroFadeUp 0.8s ease-out forwards;
    animation-delay: 0.65s;
    opacity: 0;
  }

  .hero__image-container {
    animation: heroFadeIn 1s ease-out forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .hero__stats-features,
    .hero__tagline,
    .hero__headline,
    .hero__cta,
    .hero__phone,
    .hero__image-container {
      animation: none;
      opacity: 1;
    }

    .hero__stats,
    .hero__stats-number,
    .hero__stats-plus,
    .hero__stats-label,
    .hero__divider,
    .hero__feature,
    .hero__feature-icon,
    .hero__feature-icon path,
    .hero__feature-text,
    .hero__feature-text--highlight,
    .hero__tagline-icon,
    .hero__tagline-text,
    .hero__headline--gradient,
    .hero__phone,
    .hero__phone-icon,
    .hero__phone-icon path,
    .hero__phone-text,
    .hero__phone-number {
      transition: none;
    }
  }

  .hero__stats-features {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: 20px;
    margin-bottom: 111px;
  }

  .hero__stats {
    display: flex;
    flex-direction: column;
    gap: 8px;
    cursor: default;
  }

  .hero__stats-number {
    font-family: var(--font-inter);
    font-size: 24px;
    font-weight: 400;
    color: var(--color-white);
  }

  .hero__stats-plus {
    color: var(--color-orange-primary);
  }

  .hero__stats-label {
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-light);
  }

  .hero__divider {
    width: 1px;
    height: 52px;
    background: var(--color-gray-dark);
  }

  /* Hover effects - only on devices with hover capability (not touch devices) */
  @media (hover: hover) {
    .hero__stats {
      transition: transform 0.3s ease;
    }

    .hero__stats:hover {
      transform: translateY(-2px);
    }

    .hero__stats-number {
      transition: text-shadow 0.3s ease;
    }

    .hero__stats:hover .hero__stats-number {
      text-shadow: 0 0 20px rgba(250, 117, 35, 0.3);
    }

    .hero__stats-plus {
      transition: color 0.3s ease;
    }

    .hero__stats:hover .hero__stats-plus {
      color: var(--color-orange-light);
    }

    .hero__stats-label {
      transition: color 0.3s ease;
    }

    .hero__stats:hover .hero__stats-label {
      color: var(--color-white);
    }

    .hero__divider {
      transition: height 0.3s ease, background 0.3s ease;
    }

    .hero__stats-features:hover .hero__divider {
      height: 60px;
      background: var(--color-orange-primary);
    }
  }

  .hero__features {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hero__feature {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: default;
  }

  .hero__feature-icon {
    flex-shrink: 0;
  }

  .hero__feature-text {
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-medium);
  }

  .hero__feature-text--highlight {
    color: var(--color-white);
  }

  /* Hover effects - only on devices with hover capability */
  @media (hover: hover) {
    .hero__feature {
      transition: transform 0.3s ease;
    }

    .hero__feature:hover {
      transform: translateX(4px);
    }

    .hero__feature-icon {
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .hero__feature:hover .hero__feature-icon {
      transform: rotate(90deg);
      filter: drop-shadow(0 0 8px rgba(250, 117, 35, 0.5));
    }

    .hero__feature-icon path {
      transition: stroke 0.3s ease;
    }

    .hero__feature:hover .hero__feature-icon path {
      stroke: var(--color-orange-primary);
    }

    .hero__feature-text {
      transition: color 0.3s ease;
    }

    .hero__feature:hover .hero__feature-text {
      color: var(--color-gray-light);
    }

    .hero__feature-text--highlight {
      transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .hero__feature:hover .hero__feature-text--highlight {
      color: var(--color-orange-light);
      text-shadow: 0 0 15px rgba(250, 117, 35, 0.2);
    }
  }

  .hero__tagline {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 40px;
    cursor: default;
  }

  .hero__tagline-icon {
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    flex-shrink: 0;
  }

  .hero__tagline-text {
    font-family: var(--font-manrope);
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: 0.5px;
  }

  /* Hover effects - only on devices with hover capability */
  @media (hover: hover) {
    .hero__tagline-icon {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hero__tagline:hover .hero__tagline-icon {
      transform: rotate(45deg) scale(1.2);
      box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
    }

    .hero__tagline-text {
      transition: letter-spacing 0.3s ease;
    }

    .hero__tagline:hover .hero__tagline-text {
      letter-spacing: 2px;
    }
  }

  .hero__headline {
    font-family: var(--font-manrope);
    font-size: 50px;
    font-weight: 400;
    line-height: 120%;
    color: var(--color-white);
    max-width: 613px;
    margin-bottom: 39px;
  }

  .hero__headline--gradient {
    background: linear-gradient(135deg, var(--color-orange-primary) 0%, var(--color-orange-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    cursor: default;
    position: relative;
    display: inline;
  }

  /* Hover effects - only on devices with hover capability */
  @media (hover: hover) {
    .hero__headline--gradient {
      transition: filter 0.3s ease;
    }

    .hero__headline--gradient:hover {
      filter: drop-shadow(0 0 20px rgba(250, 117, 35, 0.4));
    }
  }

  .hero__cta {
    margin-bottom: 23px;
  }

  .hero__phone {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: default;
  }

  .hero__phone-icon {
    flex-shrink: 0;
  }

  .hero__phone-text {
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-medium);
  }

  .hero__phone-number {
    color: var(--color-white);
    text-decoration: none;
  }

  /* Hover effects - only on devices with hover capability */
  @media (hover: hover) {
    .hero__phone {
      transition: transform 0.3s ease;
    }

    .hero__phone:hover {
      transform: translateX(4px);
    }

    .hero__phone-icon {
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .hero__phone:hover .hero__phone-icon {
      transform: rotate(90deg);
      filter: drop-shadow(0 0 8px rgba(250, 117, 35, 0.5));
    }

    .hero__phone-icon path {
      transition: stroke 0.3s ease;
    }

    .hero__phone:hover .hero__phone-icon path {
      stroke: var(--color-orange-primary);
    }

    .hero__phone-text {
      transition: color 0.3s ease;
    }

    .hero__phone:hover .hero__phone-text {
      color: var(--color-white);
    }

    .hero__phone-number {
      transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .hero__phone-number:hover {
      color: var(--color-orange-light);
      text-shadow: 0 0 15px rgba(250, 117, 35, 0.3);
    }

    .hero__phone:hover .hero__phone-number {
      color: var(--color-orange-light);
      text-shadow: 0 0 15px rgba(250, 117, 35, 0.3);
    }
  }

  .hero__image-container {
    position: relative;
    height: 775px;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding-top: 20px;
    cursor: pointer;
  }

  .hero__image-wrapper {
    position: relative;
    width: 621px;
    height: 775px;
    overflow: hidden;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .hero__image-container:hover .hero__image {
    transform: scale(1.08);
  }

  .hero__image-fade {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(90deg, rgba(11, 11, 11, 0) 44.59%, rgba(11, 11, 11, 0.8) 100%),
      linear-gradient(360deg, rgba(11, 11, 11, 0) 41.74%, rgba(11, 11, 11, 0.8) 100%),
      linear-gradient(270deg, rgba(11, 11, 11, 0) 53.86%, rgba(11, 11, 11, 0.8) 100%),
      linear-gradient(180deg, rgba(11, 11, 11, 0) 53.94%, rgba(11, 11, 11, 0.8) 100%);
    pointer-events: none;
  }

  .hero__grid-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 621px;
    height: 775px;
    pointer-events: none;
  }

  .hero__grid-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr;
      padding: 0 40px 60px;
      gap: 50px;
      min-height: auto;
    }

    .hero__content {
      padding-top: 80px;
      order: 0;
    }

    .hero__stats-features {
      margin-bottom: 60px;
    }

    .hero__headline {
      font-size: 40px;
      max-width: 100%;
    }

    .hero__image-container {
      height: 500px;
      padding-top: 0;
      justify-content: center;
      order: 1;
    }

    .hero__image-wrapper {
      width: 100%;
      height: 100%;
      max-width: 500px;
    }

    .hero__grid-overlay {
      width: 100%;
      height: 100%;
      max-width: 500px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
    }

    .hero__container {
      padding: 0 32px 40px;
      gap: 40px;
    }

    .hero__content {
      padding: 30px 20px 0;
    }

    .hero__stats-features {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: 50px;
      width: 100%;
    }

    .hero__stats {
      width: 100%;
      pointer-events: none;
    }

    .hero__stats-number {
      font-size: 28px;
    }

    .hero__stats-label {
      font-size: 15px;
    }

    .hero__divider {
      width: 100%;
      height: 1px;
    }

    /* Disable all hover effects on mobile */
    .hero__stats,
    .hero__stats:hover {
      transform: none !important;
    }

    .hero__stats-number,
    .hero__stats:hover .hero__stats-number {
      text-shadow: none !important;
    }

    .hero__stats-plus,
    .hero__stats:hover .hero__stats-plus {
      color: var(--color-orange-primary) !important;
    }

    .hero__stats-label,
    .hero__stats:hover .hero__stats-label {
      color: var(--color-gray-light) !important;
    }

    .hero__divider,
    .hero__stats-features:hover .hero__divider {
      height: 1px !important;
      background: var(--color-gray-dark) !important;
    }

    .hero__features {
      width: 100%;
      gap: 16px;
    }

    .hero__feature {
      width: 100%;
    }

    .hero__feature-text {
      font-size: 15px;
      line-height: 1.5;
    }

    .hero__tagline {
      margin-bottom: 30px;
    }

    .hero__tagline-text {
      font-size: 14px;
    }

    .hero__headline {
      font-size: 32px;
      line-height: 115%;
      margin-bottom: 30px;
    }

    .hero__cta {
      margin-bottom: 20px;
      width: 100%;
    }

    .hero__phone {
      font-size: 15px;
    }

    .hero__image-container {
      height: 450px;
      order: 1;
    }

    .hero__image-wrapper {
      max-width: 100%;
      border-radius: 8px;
      overflow: hidden;
    }

    .hero__grid-overlay {
      max-width: 100%;
      border-radius: 8px;
    }
  }

  @media (max-width: 480px) {
    .hero__container {
      padding: 0 24px 30px;
    }

    .hero__content {
      padding: 20px 16px 0;
    }

    .hero__stats-features {
      margin-bottom: 40px;
    }

    .hero__stats-number {
      font-size: 24px;
    }

    .hero__stats-label {
      font-size: 14px;
    }

    .hero__feature-text {
      font-size: 14px;
    }

    .hero__tagline {
      margin-bottom: 24px;
    }

    .hero__tagline-icon {
      width: 9px;
      height: 9px;
    }

    .hero__tagline-text {
      font-size: 13px;
    }

    .hero__headline {
      font-size: 26px;
      line-height: 120%;
      margin-bottom: 24px;
    }

    .hero__phone-text {
      font-size: 14px;
    }

    .hero__image-container {
      height: 350px;
    }
  }
</style>
