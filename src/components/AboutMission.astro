<section class="mission">
  <div class="mission__container">
    <!-- Left Column: Statement -->
    <div class="mission__content scroll-animate">
      <!-- Section Label -->
      <div class="mission__label">
        <span class="mission__label-icon"></span>
        <span class="mission__label-text">Mission Statement</span>
      </div>

      <p class="mission__statement">
        Deliver <span class="mission__statement--highlight">innovative geotechnical solutions</span> for <span class="mission__statement--highlight">foundation&nbsp;repair, infrastructure&nbsp;repair, waterproofing</span> and <span class="mission__statement--highlight">soil&nbsp;stabilization.</span> <span class="mission__statement--highlight">Minimize environmental&nbsp;impact</span> - with integrity and precision in every project.
      </p>
    </div>

    <!-- Right Column: Stats -->
    <div class="mission__stats scroll-animate scroll-animate--delay-1">
      <div class="mission__stat">
        <span class="mission__stat-number">40<span class="mission__stat-accent">+</span></span>
        <span class="mission__stat-label">Years Combined<br>Experience</span>
      </div>

      <div class="mission__stat-divider"></div>

      <div class="mission__stat">
        <span class="mission__stat-number">100<span class="mission__stat-accent">%</span></span>
        <span class="mission__stat-label">Customer Satisfaction</span>
      </div>
    </div>
  </div>
</section>

<style>
  .mission {
    position: relative;
    background: var(--color-bg-dark-1);
    padding: 100px 0;
  }

  .mission__container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 64px;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 80px;
    align-items: start;
  }

  /* Section Label */
  .mission__label {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 30px;
    cursor: default;
    width: fit-content;
  }

  .mission__label-icon {
    display: block;
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    border-radius: 1px;
    flex-shrink: 0;
  }

  @media (hover: hover) {
    .mission__label-icon {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .mission__label:hover .mission__label-icon {
      transform: rotate(45deg) scale(1.2);
      box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
    }
  }

  .mission__label-text {
    font-family: var(--font-manrope);
    font-size: 16px;
    font-weight: 600;
    line-height: 120%;
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: 0.5px;
  }

  @media (hover: hover) {
    .mission__label-text {
      transition: letter-spacing 0.3s ease;
    }

    .mission__label:hover .mission__label-text {
      letter-spacing: 2px;
    }
  }

  /* Statement */
  .mission__statement {
    font-family: var(--font-manrope);
    font-style: normal;
    font-weight: 400;
    font-size: 40px;
    line-height: 120%;
    color: #7C7C7C;
    margin: 0;
    max-width: 816px;
  }

  .mission__statement--highlight {
    color: var(--color-white);
    position: relative;
    display: inline-block;
    cursor: default;
  }

  @media (hover: hover) {
    .mission__statement--highlight {
      transition: color 0.3s ease;
    }

    .mission__statement--highlight::after {
      content: '';
      position: absolute;
      bottom: 2px;
      left: 0;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--color-orange-primary), var(--color-orange-light));
      transition: width 0.4s ease;
    }

    .mission__statement--highlight:hover {
      color: var(--color-orange-light);
    }

    .mission__statement--highlight:hover::after {
      width: 100%;
    }
  }

  /* Stats */
  .mission__stats {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 50px;
    padding-top: calc(60px + 4rem);
  }

  .mission__stat {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    cursor: default;
  }

  @media (hover: hover) {
    .mission__stat {
      transition: transform 0.3s ease;
    }

    .mission__stat:hover {
      transform: translateY(-4px);
    }
  }

  .mission__stat-number {
    font-family: var(--font-manrope);
    font-style: normal;
    font-weight: 400;
    font-size: 48px;
    line-height: 1;
    color: #FFFFFF;
  }

  @media (hover: hover) {
    .mission__stat-number {
      transition: text-shadow 0.3s ease;
    }

    .mission__stat:hover .mission__stat-number {
      text-shadow: 0 0 20px rgba(250, 117, 35, 0.3);
    }
  }

  .mission__stat-accent {
    color: var(--color-orange-primary);
  }

  @media (hover: hover) {
    .mission__stat-accent {
      transition: color 0.3s ease;
    }

    .mission__stat:hover .mission__stat-accent {
      color: var(--color-orange-light);
    }
  }

  .mission__stat-label {
    font-family: var(--font-poppins);
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.4;
    color: #A2A2A2;
  }

  @media (hover: hover) {
    .mission__stat-label {
      transition: color 0.3s ease;
    }

    .mission__stat:hover .mission__stat-label {
      color: var(--color-white);
    }
  }

  .mission__stat-divider {
    width: 0px;
    height: 29px;
    border: 1px solid #525252;
  }

  @media (hover: hover) {
    .mission__stat-divider {
      transition: height 0.3s ease, border-color 0.3s ease;
    }

    .mission__stats:hover .mission__stat-divider {
      height: 40px;
      border-color: var(--color-orange-primary);
    }
  }

  /* Responsive */

  /* Large tablets and small desktops (1200px - 1024px) */
  @media (max-width: 1200px) {
    .mission__container {
      padding: 0 48px;
      gap: 60px;
    }

    .mission__statement {
      font-size: 36px;
      max-width: 700px;
    }

    .mission__stats {
      gap: 40px;
      padding-top: calc(60px + 3rem);
    }

    .mission__stat-number {
      font-size: 42px;
    }

    .mission__stat-label {
      font-size: 16px;
    }
  }

  /* Tablets and below (1024px and down) */
  @media (max-width: 1024px) {
    .mission {
      padding: 80px 0;
    }

    .mission__container {
      grid-template-columns: 1fr;
      gap: 50px;
      padding: 0 40px;
    }

    .mission__statement {
      font-size: 32px;
      max-width: 100%;
    }

    .mission__stats {
      padding-top: 0;
      flex-direction: row;
      gap: 50px;
      align-items: center;
      justify-content: flex-start;
    }

    .mission__stat-number {
      font-size: 40px;
    }

    .mission__stat-label {
      font-size: 16px;
    }

    .mission__stat-divider {
      width: 1px;
      height: 60px;
      align-self: center;
    }
  }

  /* Mobile landscape and small tablets (768px and down) */
  @media (max-width: 768px) {
    .mission {
      padding: 60px 0;
    }

    .mission__container {
      padding: 0 24px;
      gap: 36px;
    }

    .mission__label {
      margin-bottom: 24px;
    }

    .mission__label-text {
      font-size: 14px;
    }

    .mission__statement {
      font-size: 26px;
      line-height: 130%;
    }

    .mission__stats {
      gap: 40px;
    }

    .mission__stat-number {
      font-size: 36px;
      line-height: 1;
    }

    .mission__stat-label {
      font-size: 14px;
    }

    .mission__stat-divider {
      height: 50px;
    }
  }

  /* Mobile portrait (480px and down) */
  @media (max-width: 480px) {
    .mission {
      padding: 50px 0;
    }

    .mission__container {
      padding: 0 20px;
      gap: 32px;
    }

    .mission__label {
      margin-bottom: 20px;
    }

    .mission__label-icon {
      width: 9px;
      height: 9px;
    }

    .mission__label-text {
      font-size: 13px;
    }

    .mission__statement {
      font-size: 22px;
      line-height: 135%;
    }

    .mission__stats {
      flex-direction: row;
      gap: 62px;
      align-items: flex-start;
      justify-content: center;
    }

    .mission__stat-divider {
      display: none;
    }

    .mission__stat-number {
      font-size: 32px;
    }

    .mission__stat-label {
      font-size: 13px;
    }

    /* Disable hover effects on stats for mobile */
    .mission__stat,
    .mission__stat-number,
    .mission__stat-accent,
    .mission__stat-label,
    .mission__stat-divider {
      transition: none;
    }

    .mission__stat:hover {
      transform: none;
    }

    .mission__stat:hover .mission__stat-number {
      text-shadow: none;
    }

    .mission__stat:hover .mission__stat-accent {
      color: var(--color-orange-primary);
    }

    .mission__stat:hover .mission__stat-label {
      color: #A2A2A2;
    }

    .mission__stats:hover .mission__stat-divider {
      height: 1px;
      border-color: #525252;
    }
  }

  /* Small mobile devices (375px and down) */
  @media (max-width: 375px) {
    .mission {
      padding: 40px 0;
    }

    .mission__container {
      padding: 0 16px;
      gap: 28px;
    }

    .mission__statement {
      font-size: 20px;
    }

    .mission__stats {
      gap: 20px;
    }

    .mission__stat-number {
      font-size: 28px;
    }

    .mission__stat-label {
      font-size: 12px;
    }

    .mission__stat-divider {
      display: none;
    }
  }

  /* Scroll Animations */
  .scroll-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .scroll-animate--delay-1 {
    transition-delay: 0.15s;
  }

  .scroll-animate.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Faster animations on mobile */
  @media (max-width: 768px) {
    .scroll-animate {
      transform: translateY(20px);
      transition: opacity 0.3s ease-out, transform 0.3s ease-out;
    }

    .scroll-animate--delay-1 {
      transition-delay: 0s;
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-animate {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .mission__label-icon,
    .mission__label-text,
    .mission__statement--highlight,
    .mission__statement--highlight::after,
    .mission__stat,
    .mission__stat-number,
    .mission__stat-accent,
    .mission__stat-label,
    .mission__stat-divider {
      transition: none;
    }
  }
</style>

<script is:inline>
  (function() {
    function initMissionAnimations() {
      var observerOptions = {
        root: null,
        rootMargin: '0px 0px -50px 0px',
        threshold: 0.1
      };

      var observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      var elements = document.querySelectorAll('.mission .scroll-animate');
      if (elements.length > 0) {
        elements.forEach(function(el) {
          observer.observe(el);
        });
      }
    }

    // Run on DOMContentLoaded or immediately if already loaded
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMissionAnimations);
    } else {
      // DOM already loaded, wait for next frame to ensure CSS is applied
      requestAnimationFrame(function() {
        requestAnimationFrame(initMissionAnimations);
      });
    }
  })();
</script>
