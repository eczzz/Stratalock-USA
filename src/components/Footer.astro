---
import Button from './Button.astro';

const navigationLinks = [
  { text: 'About', href: '#about' },
  { text: 'Services', href: '#services' },
  { text: 'Service Areas', href: '#service-areas' },
  { text: 'Process', href: '#process' },
  { text: 'Case Studies', href: '#case-studies' }
];

const socialLinks = [
  { name: 'Twitter', href: 'https://twitter.com/stratalock' },
  { name: 'Instagram', href: 'https://instagram.com/stratalock' },
  { name: 'LinkedIn', href: 'https://linkedin.com/company/stratalock' }
];
---

<footer class="footer">
  <div class="footer__container">
    <!-- Top Section -->
    <div class="footer__top">
      <!-- Logo & CTA Column -->
      <div class="footer__column footer__column--logo">
        <div class="footer__logo">
          <img src="/images/Stratalock-USA-Logo.webp" alt="Stratalock" />
        </div>

        <div class="footer__cta">
          <div class="footer__cta-tagline">
            <span class="footer__cta-icon"></span>
            <span class="footer__cta-text">Ready to <span class="footer__cta-text--highlight">Fix Your Foundation</span> the Right Way?</span>
          </div>
          <Button text="Contact Us" size="large" href="/contact" />
        </div>
      </div>

      <!-- Navigation Column -->
      <div class="footer__column footer__column--nav">
        <h3 class="footer__column-title">Navigation</h3>
        <nav class="footer__nav">
          <ul class="footer__nav-list">
            {navigationLinks.map((link) => (
              <li class="footer__nav-item">
                <a href={link.href} class="footer__nav-link">{link.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Social Column -->
      <div class="footer__column footer__column--social">
        <h3 class="footer__column-title">Follow Us</h3>
        <ul class="footer__social-list">
          {socialLinks.map((social) => (
            <li class="footer__social-item">
              <a href={social.href} class="footer__social-link" target="_blank" rel="noopener noreferrer">
                <span class="footer__social-name">{social.name}</span>
                <svg class="footer__social-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 13L13 3M13 3H5M13 3V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="footer__divider"></div>

    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <div class="footer__bottom-left">
        <span class="footer__copyright">&copy; 2025</span>
      </div>
      <div class="footer__bottom-center">
        <span class="footer__rights">All Rights Reserved. Stratalock USA</span>
      </div>
      <div class="footer__bottom-right">
        <a href="#" class="footer__scroll-up" onclick="window.scrollTo({top:0,behavior:'smooth'});return false;">
          SCROLL UP
          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 13V1M7 1L1 7M7 1L13 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(108.67deg, #111111 0%, #161616 100%);
    padding: 60px 0 40px;
  }

  .footer__container {
    max-width: 1512px;
    margin: 0 auto;
    padding: 0 120px;
  }

  /* Top Section */
  .footer__top {
    display: flex;
    gap: 120px;
    margin-bottom: 80px;
  }

  /* Columns */
  .footer__column {
    display: flex;
    flex-direction: column;
  }

  .footer__column--logo {
    flex: 0 0 auto;
    gap: 40px;
  }

  .footer__column--nav,
  .footer__column--social {
    flex: 0 0 auto;
    margin-top: 192px; /* Align with CTA headline (logo 152px + gap 40px) */
  }

  .footer__column-title {
    font-family: var(--font-manrope);
    font-size: 18px;
    font-weight: 500;
    color: var(--color-white);
    margin: 0 0 20px 0;
  }

  /* Logo */
  .footer__logo {
    width: 185px;
    height: 152px;
  }

  .footer__logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* CTA */
  .footer__cta {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    max-width: 597px;
  }

  .footer__cta-tagline {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .footer__cta-icon {
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    flex-shrink: 0;
    margin-top: 14px;
  }

  .footer__cta-text {
    font-family: var(--font-manrope);
    font-size: 46px;
    font-weight: 400;
    line-height: 120%;
    letter-spacing: -1.79px;
    color: #6D6D6D;
  }

  .footer__cta-text--highlight {
    color: var(--color-white);
  }

  /* Navigation */
  .footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer__nav-item {
    margin: 0;
  }

  .footer__nav-link {
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-medium);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__nav-link:hover {
    color: var(--color-white);
  }

  /* Social */
  .footer__social-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer__social-item {
    margin: 0;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-poppins);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-gray-medium);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__social-link:hover {
    color: var(--color-white);
  }

  .footer__social-link:hover .footer__social-arrow {
    transform: translate(2px, -2px);
  }

  .footer__social-arrow {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  /* Divider */
  .footer__divider {
    width: 100%;
    max-width: 1272px;
    height: 1px;
    background: #525252;
    margin: 0 auto 30px;
  }

  /* Bottom Bar */
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer__bottom-left {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .footer__copyright,
  .footer__rights {
    font-family: var(--font-poppins);
    font-size: 14px;
    font-weight: 400;
    color: var(--color-gray-medium);
  }

  .footer__bottom-center {
    display: flex;
  }

  .footer__bottom-right {
    display: flex;
  }

  .footer__scroll-up {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-poppins);
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    color: var(--color-gray-medium);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__scroll-up:hover {
    color: var(--color-white);
  }

  .footer__scroll-up svg {
    transition: transform 0.2s ease;
  }

  .footer__scroll-up:hover svg {
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1400px) {
    .footer__container {
      padding: 0 60px;
    }
  }

  @media (max-width: 1024px) {
    .footer__container {
      padding: 0 40px;
    }

    .footer__top {
      flex-wrap: wrap;
      gap: 60px;
    }

    .footer__column--logo {
      flex: 1 1 100%;
    }

    .footer__column--nav,
    .footer__column--social {
      flex: 1 1 auto;
      margin-top: 0;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 60px 0 30px;
    }

    .footer__container {
      padding: 0 20px;
    }

    .footer__top {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 40px;
      margin-bottom: 40px;
    }

    .footer__column--logo {
      grid-column: 1 / -1;
    }

    .footer__column--nav,
    .footer__column--social {
      grid-column: span 1;
    }

    .footer__logo {
      width: 150px;
      height: 123px;
    }

    .footer__cta {
      max-width: 100%;
    }

    .footer__cta-text {
      font-size: 28px;
    }

    .footer__cta-icon {
      margin-top: 8px;
    }

    .footer__column-title {
      font-size: 16px;
      margin-bottom: 16px;
    }

    .footer__nav-list,
    .footer__social-list {
      gap: 12px;
    }

    .footer__nav-link,
    .footer__social-link {
      font-size: 14px;
    }

    .footer__divider {
      margin-bottom: 20px;
    }

    .footer__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }

    .footer__bottom-left {
      flex-direction: column;
      gap: 10px;
      align-items: flex-start;
    }
  }
</style>
