---
import Button from './Button.astro';

const leaders = [
  {
    name: 'Joel Bryant',
    title: 'Co-Founder & CEO',
    division: 'BUSINESS',
    bio: "Joel leads Stratalock, specializing in complex geotechnical solutions for commercial and residential projects. With over 15 years in foundation repair and soil stabilization, he brings deep industry knowledge and a commitment to innovative, cost-effective solutions that challenge traditional methods."
  },
  {
    name: 'Jacob Bryant',
    title: 'Co-Founder & VP of Technical Operations',
    division: 'ENGINEERING',
    bio: "Jacob oversees all technical aspects of Stratalock's system, ensuring every project meets rigorous engineering standards. His specialized background in geotechnical engineering and soil mechanics enables the team to tackle projects other contractors can't solve, from foundation stabilization to infrastructure support."
  },
  {
    name: 'Erik Prinzing',
    title: 'Co-Founder & VP of Technical Operations',
    division: 'OPERATIONS',
    bio: "Jacob oversees and ensures every project meets rigorous engineering standards. His specialized background in geotechnical engineering and soil mechanics enables the team to tackle projects other contractors can't solve, from foundation stabilization to infrastructure support."
  },
  {
    name: 'Jesse Bryant',
    title: 'Co-Founder & Director of Project Execution',
    division: 'OPERATIONS',
    bio: "Jesse leads field operations and quality control. With extensive hands-on experience in foundation repair and concrete leveling, he bridges the gap between engineering design and on-site reality, delivering consistent results across residential, commercial, and infrastructure projects."
  }
];
---

<section class="leadership">
  <div class="leadership__container">
    <!-- Header -->
    <div class="leadership__header">
      <div class="leadership__header-left scroll-animate">
        <!-- Grid overlay behind headline -->
        <div class="leadership__grid-overlay">
          <svg class="leadership__grid-svg" viewBox="0 0 728 392" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="leadershipGridFade" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="white" stop-opacity="0"/>
                <stop offset="45%" stop-color="white" stop-opacity="1"/>
                <stop offset="55%" stop-color="white" stop-opacity="1"/>
                <stop offset="100%" stop-color="white" stop-opacity="0"/>
              </linearGradient>
              <mask id="leadershipGridMask">
                <rect width="100%" height="100%" fill="url(#leadershipGridFade)"/>
              </mask>
            </defs>
            <g mask="url(#leadershipGridMask)">
            <!-- Vertical lines (7 columns + 1 extra left = 8 lines) -->
            <line x1="0" y1="0" x2="0" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="104" y1="0" x2="104" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="208" y1="0" x2="208" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="312" y1="0" x2="312" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="416" y1="0" x2="416" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="520" y1="0" x2="520" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="624" y1="0" x2="624" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="728" y1="0" x2="728" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <!-- Horizontal lines (4 rows = 5 lines) -->
            <line x1="0" y1="0" x2="728" y2="0" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="0" y1="98" x2="728" y2="98" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="0" y1="196" x2="728" y2="196" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="0" y1="294" x2="728" y2="294" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <line x1="0" y1="392" x2="728" y2="392" stroke="rgba(255, 255, 255, 0.13)" stroke-width="1"/>
            <!-- Subtle filled cells -->
            <rect x="208" y="98" width="104" height="98" fill="rgba(255, 255, 255, 0.04)"/>
            <rect x="520" y="196" width="104" height="98" fill="rgba(255, 255, 255, 0.04)"/>
            </g>
          </svg>
        </div>

        <!-- Headline -->
        <h2 class="leadership__headline">
          <span class="leadership__headline-gray">The </span><span class="leadership__headline-white">Experts Behind</span><br>
          <span class="leadership__headline-white">Every Project.</span>
        </h2>

        <!-- Section Label -->
        <div class="leadership__label">
          <span class="leadership__label-icon"></span>
          <span class="leadership__label-text">Leadership</span>
        </div>
      </div>

      <div class="leadership__header-right scroll-animate scroll-animate--delay-1">
        <p class="leadership__description">
          Our leadership team brings decades of specialized experience in geotechnical engineering, soil stabilization, and construction management. Each project benefits from their combined expertise and commitment to delivering innovative solutions.
        </p>
        <Button text="Contact Us" size="large" href="/contact" />
      </div>
    </div>

    <!-- Leadership Cards Grid -->
    <div class="leadership__grid">
      {leaders.map((leader, index) => (
        <article class={`leadership__card scroll-animate scroll-animate--delay-${index + 2}`}>
          <!-- Corner Crosshairs -->
          <svg class="leadership__crosshair leadership__crosshair--top-left" width="43" height="40" viewBox="0 0 43 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21.4909 25.477V38.798M21.4909 0.5V13.821M15.1087 19.6407H0.5M42.5 19.6407H27.8913" stroke="white" stroke-linecap="round"/>
          </svg>
          <svg class="leadership__crosshair leadership__crosshair--top-right" width="43" height="40" viewBox="0 0 43 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21.4909 25.477V38.798M21.4909 0.5V13.821M15.1087 19.6407H0.5M42.5 19.6407H27.8913" stroke="white" stroke-linecap="round"/>
          </svg>
          <svg class="leadership__crosshair leadership__crosshair--bottom-left" width="43" height="40" viewBox="0 0 43 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21.4909 25.477V38.798M21.4909 0.5V13.821M15.1087 19.6407H0.5M42.5 19.6407H27.8913" stroke="white" stroke-linecap="round"/>
          </svg>
          <svg class="leadership__crosshair leadership__crosshair--bottom-right" width="43" height="40" viewBox="0 0 43 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21.4909 25.477V38.798M21.4909 0.5V13.821M15.1087 19.6407H0.5M42.5 19.6407H27.8913" stroke="white" stroke-linecap="round"/>
          </svg>

          <!-- Division Badge -->
          <span class="leadership__badge">{leader.division}</span>

          <!-- Profile Image -->
          <div class="leadership__image-wrapper">
            <img src="/images/fake-profile-image.webp" alt={leader.name} class="leadership__image" />
          </div>

          <!-- Card Content -->
          <div class="leadership__card-content">
            <span class="leadership__card-title">{leader.title}</span>
            <h3 class="leadership__card-name">{leader.name}</h3>
            <p class="leadership__card-bio">{leader.bio}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .leadership {
    position: relative;
    background: var(--color-bg-dark-1);
    padding: 100px 0;
    overflow: hidden;
  }

  .leadership__container {
    position: relative;
    z-index: 1;
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 64px;
  }

  /* Header */
  .leadership__header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: end;
    margin-bottom: 275px;
  }

  .leadership__header-left {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  /* Grid overlay - behind headline only */
  .leadership__grid-overlay {
    position: absolute;
    top: calc(-98px + 3rem);
    left: -124px;
    width: calc(100% + 144px);
    height: 326px;
    pointer-events: none;
    z-index: 0;
  }

  .leadership__grid-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .leadership__header-right {
    display: flex;
    flex-direction: column;
    gap: 30px;
    align-items: flex-start;
  }

  /* Section Label */
  .leadership__label {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 0;
    cursor: default;
    width: fit-content;
  }

  .leadership__label-icon {
    display: block;
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    border-radius: 1px;
    flex-shrink: 0;
  }

  @media (hover: hover) {
    .leadership__label-icon {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .leadership__label:hover .leadership__label-icon {
      transform: rotate(45deg) scale(1.2);
      box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
    }
  }

  .leadership__label-text {
    font-family: var(--font-manrope);
    font-size: 16px;
    font-weight: 600;
    line-height: 120%;
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: 0.5px;
  }

  @media (hover: hover) {
    .leadership__label-text {
      transition: letter-spacing 0.3s ease;
    }

    .leadership__label:hover .leadership__label-text {
      letter-spacing: 2px;
    }
  }

  /* Headline */
  .leadership__headline {
    position: relative;
    z-index: 1;
    font-family: var(--font-manrope);
    font-size: 54px;
    font-weight: 300;
    line-height: 120%;
    margin: 0 0 30px 0;
  }

  .leadership__headline-gray {
    color: var(--color-gray-medium);
  }

  .leadership__headline-white {
    color: var(--color-white);
    position: relative;
    display: inline-block;
    cursor: default;
  }

  @media (hover: hover) {
    .leadership__headline-white {
      transition: color 0.3s ease;
    }

    .leadership__headline-white::after {
      content: '';
      position: absolute;
      bottom: 2px;
      left: 0;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--color-orange-primary), var(--color-orange-light));
      transition: width 0.4s ease;
    }

    .leadership__headline-white:hover {
      color: var(--color-orange-light);
    }

    .leadership__headline-white:hover::after {
      width: 100%;
    }
  }

  /* Description */
  .leadership__description {
    font-family: var(--font-poppins);
    font-size: 20px;
    font-weight: 400;
    line-height: 30px;
    color: var(--color-gray-medium);
    margin: 0;
  }

  /* Cards Grid */
  .leadership__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 160px 160px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Card */
  .leadership__card {
    position: relative;
    background: var(--color-bg-dark-1);
    padding: 30px 0 0 0;
    overflow: visible;
    cursor: pointer;
  }

  @media (hover: hover) {
    .leadership__card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .leadership__card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    }
  }

  /* Corner Crosshairs */
  .leadership__crosshair {
    position: absolute;
    width: 43px;
    height: 40px;
    z-index: 2;
    pointer-events: none;
  }

  @media (hover: hover) {
    .leadership__crosshair {
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .leadership__card:hover .leadership__crosshair {
      transform: scale(1.1);
      opacity: 0.8;
    }

    .leadership__crosshair path {
      transition: stroke 0.3s ease;
    }

    .leadership__card:hover .leadership__crosshair path {
      stroke: var(--color-orange-primary);
    }
  }

  .leadership__crosshair--top-left {
    top: -44px;
    left: -46px;
  }

  .leadership__crosshair--top-right {
    top: -44px;
    right: -46px;
  }

  .leadership__crosshair--bottom-left {
    bottom: -44px;
    left: -46px;
  }

  .leadership__crosshair--bottom-right {
    bottom: -44px;
    right: -46px;
  }

  /* Division Badge */
  .leadership__badge {
    position: absolute;
    top: 25px;
    left: calc(12px - 2rem);
    z-index: 2;
    font-family: var(--font-poppins);
    font-size: 15px;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-white);
    background: var(--color-orange-primary);
    padding: 10px 16px;
    line-height: 120%;
  }

  @media (hover: hover) {
    .leadership__badge {
      transition: background 0.3s ease, transform 0.3s ease;
    }

    .leadership__card:hover .leadership__badge {
      background: var(--color-orange-light);
      transform: translateX(-5px);
    }
  }

  /* Placeholder Image */
  .leadership__image-wrapper {
    padding: 14px 39px 0;
    overflow: hidden;
  }

  .leadership__image {
    width: 100%;
    height: 320px;
    object-fit: cover;
    object-position: center top;
    display: block;
  }

  @media (hover: hover) {
    .leadership__image {
      transition: transform 0.5s ease;
    }

    .leadership__card:hover .leadership__image {
      transform: scale(1.05);
    }
  }

  /* Card Content */
  .leadership__card-content {
    padding: 20px 28px 40px;
  }

  .leadership__card-title {
    display: block;
    font-family: var(--font-poppins);
    font-size: 14px;
    font-weight: 400;
    line-height: 160%;
    color: #B17E5F;
    margin-bottom: 4px;
  }

  @media (hover: hover) {
    .leadership__card-title {
      transition: color 0.3s ease;
    }

    .leadership__card:hover .leadership__card-title {
      color: var(--color-orange-light);
    }
  }

  .leadership__card-name {
    font-family: var(--font-manrope);
    font-size: 32px;
    font-weight: 700;
    line-height: 125%;
    color: var(--color-white);
    margin: 0 0 20px 0;
  }

  @media (hover: hover) {
    .leadership__card-name {
      transition: text-shadow 0.3s ease;
    }

    .leadership__card:hover .leadership__card-name {
      text-shadow: 0 0 20px rgba(250, 117, 35, 0.2);
    }
  }

  .leadership__card-bio {
    font-family: var(--font-poppins);
    font-size: 20px;
    font-weight: 400;
    line-height: 30px;
    color: var(--color-gray-medium);
    margin: 0;
  }

  @media (hover: hover) {
    .leadership__card-bio {
      transition: color 0.3s ease;
    }

    .leadership__card:hover .leadership__card-bio {
      color: var(--color-gray-light);
    }
  }

  /* Responsive */

  /* Large tablets and small desktops (1200px - 1024px) */
  @media (max-width: 1200px) {
    .leadership__container {
      padding: 0 56px;
    }

    .leadership__header {
      gap: 50px;
      margin-bottom: 200px;
    }

    .leadership__headline {
      font-size: 48px;
    }

    .leadership__description {
      font-size: 18px;
      line-height: 28px;
    }

    .leadership__grid {
      gap: 120px 120px;
      padding: 0 10px;
    }

    .leadership__crosshair {
      width: 40px;
      height: 37px;
    }

    .leadership__crosshair--top-left {
      top: -42px;
      left: -42px;
    }

    .leadership__crosshair--top-right {
      top: -42px;
      right: -42px;
    }

    .leadership__crosshair--bottom-left {
      bottom: -42px;
      left: -42px;
    }

    .leadership__crosshair--bottom-right {
      bottom: -42px;
      right: -42px;
    }

    .leadership__card-name {
      font-size: 28px;
    }

    .leadership__card-bio {
      font-size: 18px;
      line-height: 28px;
    }
  }

  /* Tablets and below (1024px and down) */
  @media (max-width: 1024px) {
    .leadership {
      padding: 80px 0;
      overflow-x: hidden;
    }

    .leadership__container {
      padding: 0 48px;
    }

    .leadership__header {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 80px;
    }

    .leadership__headline {
      font-size: 42px;
    }

    .leadership__description {
      font-size: 18px;
      max-width: 100%;
    }

    .leadership__grid {
      gap: 100px 100px;
      padding: 0 16px;
    }

    .leadership__card {
      padding: 30px 0 0 0;
    }

    .leadership__crosshair {
      width: 35px;
      height: 32px;
    }

    .leadership__crosshair--top-left {
      top: -36px;
      left: -36px;
    }

    .leadership__crosshair--top-right {
      top: -36px;
      right: -36px;
    }

    .leadership__crosshair--bottom-left {
      bottom: -36px;
      left: -36px;
    }

    .leadership__crosshair--bottom-right {
      bottom: -36px;
      right: -36px;
    }

    .leadership__badge {
      top: 26px;
    }

    .leadership__card-bio {
      font-size: 17px;
      line-height: 27px;
    }
  }

  /* Mobile landscape and small tablets (768px and down) */
  @media (max-width: 768px) {
    .leadership {
      padding: 60px 0;
      overflow-x: hidden;
    }

    .leadership__container {
      padding: 0 56px;
    }

    .leadership__header {
      gap: 35px;
      margin-bottom: 60px;
    }

    .leadership__grid-overlay {
      display: none;
    }

    .leadership__label-text {
      font-size: 14px;
    }

    .leadership__headline {
      font-size: 36px;
      line-height: 115%;
      margin-bottom: 28px;
    }

    .leadership__description {
      font-size: 16px;
      line-height: 26px;
    }

    .leadership__grid {
      grid-template-columns: 1fr;
      gap: 90px;
      padding: 0 12px;
    }

    .leadership__card {
      padding: 26px 0 0 0;
    }

    .leadership__crosshair {
      width: 32px;
      height: 29px;
    }

    .leadership__crosshair--top-left {
      top: -32px;
      left: -32px;
    }

    .leadership__crosshair--top-right {
      top: -32px;
      right: -32px;
    }

    .leadership__crosshair--bottom-left {
      bottom: -32px;
      left: -32px;
    }

    .leadership__crosshair--bottom-right {
      bottom: -32px;
      right: -32px;
    }

    .leadership__badge {
      font-size: 13px;
      padding: 8px 14px;
      left: calc(12px - 1.5rem);
      top: 22px;
    }

    .leadership__image-wrapper {
      padding: 12px 32px 0;
    }

    .leadership__image {
      height: 280px;
    }

    .leadership__card-content {
      padding: 18px 24px 36px;
    }

    .leadership__card-title {
      font-size: 13px;
    }

    .leadership__card-name {
      font-size: 26px;
      margin-bottom: 16px;
    }

    .leadership__card-bio {
      font-size: 16px;
      line-height: 26px;
    }
  }

  /* Mobile portrait (480px and down) */
  @media (max-width: 480px) {
    .leadership {
      padding: 50px 0;
    }

    .leadership__container {
      padding: 0 50px;
    }

    .leadership__header {
      gap: 30px;
      margin-bottom: 50px;
    }

    .leadership__label {
      margin-bottom: 0;
    }

    .leadership__label-icon {
      width: 9px;
      height: 9px;
    }

    .leadership__label-text {
      font-size: 13px;
    }

    .leadership__headline {
      font-size: 28px;
      line-height: 120%;
      margin-bottom: 24px;
    }

    .leadership__description {
      font-size: 15px;
      line-height: 24px;
    }

    .leadership__grid {
      gap: 80px;
      padding: 0 10px;
    }

    .leadership__card {
      padding: 22px 0 0 0;
    }

    .leadership__crosshair {
      width: 28px;
      height: 26px;
    }

    .leadership__crosshair--top-left {
      top: -28px;
      left: -28px;
    }

    .leadership__crosshair--top-right {
      top: -28px;
      right: -28px;
    }

    .leadership__crosshair--bottom-left {
      bottom: -28px;
      left: -28px;
    }

    .leadership__crosshair--bottom-right {
      bottom: -28px;
      right: -28px;
    }

    .leadership__badge {
      font-size: 12px;
      padding: 7px 12px;
      left: calc(8px - 1rem);
      top: 18px;
    }

    .leadership__image-wrapper {
      padding: 10px 28px 0;
    }

    .leadership__image {
      height: 240px;
    }

    .leadership__card-content {
      padding: 16px 20px 32px;
    }

    .leadership__card-title {
      font-size: 12px;
      margin-bottom: 2px;
    }

    .leadership__card-name {
      font-size: 24px;
      margin-bottom: 14px;
    }

    .leadership__card-bio {
      font-size: 15px;
      line-height: 24px;
    }
  }

  /* Small mobile devices (375px and down) */
  @media (max-width: 375px) {
    .leadership {
      padding: 40px 0;
    }

    .leadership__container {
      padding: 0 46px;
    }

    .leadership__header {
      gap: 26px;
      margin-bottom: 44px;
    }

    .leadership__headline {
      font-size: 24px;
      margin-bottom: 22px;
    }

    .leadership__description {
      font-size: 14px;
      line-height: 22px;
    }

    .leadership__grid {
      gap: 72px;
      padding: 0 8px;
    }

    .leadership__card {
      padding: 20px 0 0 0;
    }

    .leadership__crosshair {
      width: 24px;
      height: 22px;
    }

    .leadership__crosshair--top-left {
      top: -24px;
      left: -24px;
    }

    .leadership__crosshair--top-right {
      top: -24px;
      right: -24px;
    }

    .leadership__crosshair--bottom-left {
      bottom: -24px;
      left: -24px;
    }

    .leadership__crosshair--bottom-right {
      bottom: -24px;
      right: -24px;
    }

    .leadership__badge {
      font-size: 11px;
      padding: 6px 10px;
      left: calc(6px - 0.8rem);
      top: 16px;
    }

    .leadership__image-wrapper {
