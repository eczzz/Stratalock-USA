      height: 145px;
      filter: blur(60px);
    }

    .about-story__label {
      margin-bottom: 28px;
    }

    .about-story__label-text {
      font-size: 14px;
    }

    .about-story__headline {
      font-size: 36px;
      margin-bottom: 20px;
