    .about-story__crosshair--bottom-right {
      right: -24px;
    }

    .about-story__crosshair--bottom-left {
      left: -24px;
    }

    .about-story__crosshair--top-right {
      top: -24px;
    }

    .about-story__crosshair--bottom-right,
    .about-story__crosshair--bottom-left {
      bottom: -24px;
    }
  }

  /* Mobile portrait (480px and down) */
  @media (max-width: 480px) {
