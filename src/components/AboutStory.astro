<style>
  .about-story {
    position: relative;
    min-height: 828.81px;
    background: linear-gradient(108.67deg, #111111 0%, #161616 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    padding: 80px 0;
  }

  /* Background glow effects */
  .about-story__glow-container {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 400px;
    height: 400px;
    pointer-events: none;
    z-index: 0;
  }

  .about-story__glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }

  .about-story__glow--primary {
    bottom: 0;
    right: 0;
    width: 234px;
    height: 270.05px;
    background: #FF3B00;
    filter: blur(176.5px);
    opacity: 0.6;
  }

  .about-story__glow--secondary {
    bottom: 0;
    right: 0;
    width: 133px;
    height: 215.06px;
    background: #FF9D00;
    filter: blur(75.5px);
    opacity: 0.8;
  }

  /* Container */
  .about-story__container {
    position: relative;
    z-index: 1;
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 64px;
    display: grid;
    grid-template-columns: minmax(400px, 550px) 1fr;
    gap: 80px;
    align-items: center;
  }

  /* Image Wrapper - Contains both image and stat card */
  .about-story__image-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Stat Card - Positioned absolutely to overlap image */
  .about-story__stat-card {
    position: absolute;
    left: -28px;
    top: -34px;
    z-index: 2;
    cursor: default;
  }

  .about-story__stat-frame {
    position: relative;
    width: 190px;
    height: 227px;
    padding: 26px 28px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    background: #090909;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__stat-card:hover .about-story__stat-frame {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(250, 117, 35, 0.2);
    }
  }

  .about-story__stat-icon {
    width: 44px;
    height: 44px;
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__stat-card:hover .about-story__stat-icon {
      transform: scale(1.1);
      filter: drop-shadow(0 0 10px rgba(250, 117, 35, 0.4));
    }
  }

  .about-story__stat-number {
    font-family: var(--font-poppins);
    font-size: 48px;
    font-weight: 600;
    line-height: 125%;
    text-align: center;
  }

  .about-story__stat-number-value {
    color: var(--color-white);
    transition: text-shadow 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__stat-card:hover .about-story__stat-number-value {
      text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    }
  }

  .about-story__stat-number-plus {
    color: var(--color-orange-primary);
    transition: color 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__stat-card:hover .about-story__stat-number-plus {
      color: var(--color-orange-light);
    }
  }

  .about-story__stat-label {
    font-family: var(--font-poppins);
    font-size: 14px;
    font-weight: 300;
    line-height: 110%;
    color: #949494;
    text-align: center;
    margin: 0;
    transition: color 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__stat-card:hover .about-story__stat-label {
      color: var(--color-white);
    }
  }

  .about-story__image-frame {
    position: relative;
    width: 100%;
    max-width: 550px;
    aspect-ratio: 1 / 1;
    border-radius: 0;
    overflow: visible;
    cursor: pointer;
  }

  .about-story__image-frame::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(250, 117, 35, 0) 0%, rgba(250, 117, 35, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .about-story__image-frame:hover::after {
    opacity: 1;
  }

  /* Crosshair corner decorations */
  .about-story__crosshair {
    position: absolute;
    width: 43px;
    height: 40px;
    z-index: 10;
    pointer-events: none;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__image-frame:hover .about-story__crosshair {
      transform: scale(1.1);
      opacity: 0.8;
    }

    .about-story__image-frame:hover .about-story__crosshair path {
      stroke: var(--color-orange-primary);
    }
  }

  .about-story__crosshair path {
    transition: stroke 0.3s ease;
  }

  .about-story__crosshair--top-right {
    top: -30px;
    right: -30px;
  }

  .about-story__crosshair--bottom-right {
    bottom: -30px;
    right: -30px;
  }

  .about-story__crosshair--bottom-left {
    bottom: -30px;
    left: -30px;
  }

  .about-story__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.6s ease;
    border-radius: 0;
    display: block;
  }

  .about-story__image-frame:hover .about-story__image {
    transform: scale(1.05);
  }

  /* Right Column: Content */
  .about-story__content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Section Label */
  .about-story__label {
    display: flex;
    align-items: center;
    gap: 6px;
    width: fit-content;
    margin-bottom: 37px;
    cursor: default;
  }

  .about-story__label-icon {
    display: block;
    width: 11px;
    height: 11px;
    background: var(--color-orange-primary);
    border-radius: 1px;
    flex-shrink: 0;
  }

  @media (hover: hover) {
    .about-story__label-icon {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .about-story__label:hover .about-story__label-icon {
      transform: rotate(45deg) scale(1.2);
      box-shadow: 0 0 15px rgba(250, 117, 35, 0.5);
    }
  }

  .about-story__label-text {
    font-family: var(--font-manrope);
    font-size: 16px;
    font-weight: 600;
    line-height: 120%;
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: 0.5px;
  }

  @media (hover: hover) {
    .about-story__label-text {
      transition: letter-spacing 0.3s ease;
    }

    .about-story__label:hover .about-story__label-text {
      letter-spacing: 2px;
    }
  }

  /* Headline */
  .about-story__headline {
    font-family: var(--font-manrope);
    font-size: 50px;
    font-weight: 300;
    line-height: 120%;
    margin: 0 0 24px 0;
    max-width: 518px;
  }

  .about-story__headline-gray {
    color: var(--color-gray-medium);
  }

  .about-story__headline-white {
    color: var(--color-white);
    position: relative;
    display: inline-block;
    cursor: default;
  }

  @media (hover: hover) {
    .about-story__headline-white {
      transition: color 0.3s ease;
    }

    .about-story__headline-white::after {
      content: '';
      position: absolute;
      bottom: 2px;
      left: 0;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--color-orange-primary), var(--color-orange-light));
      transition: width 0.4s ease;
    }

    .about-story__headline-white:hover {
      color: var(--color-orange-light);
    }

    .about-story__headline-white:hover::after {
      width: 100%;
    }
  }

  /* Description */
  .about-story__description {
    font-family: var(--font-poppins);
    font-size: 20px;
    font-weight: 400;
    line-height: 150%;
    color: var(--color-gray-medium);
    max-width: 565px;
    margin: 0 0 30px 0;
  }

  /* Social Media Icons */
  .about-story__social {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .about-story__social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-orange-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  @media (hover: hover) {
    .about-story__social-link {
      transition: all 0.3s ease;
    }

    .about-story__social-link:hover {
      background: var(--color-orange-light);
      transform: translateY(-3px) rotate(5deg);
      box-shadow: 0 5px 15px rgba(241, 75, 0, 0.3);
    }
  }

  .about-story__social-link svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  @media (hover: hover) {
    .about-story__social-link:hover svg {
      transform: scale(1.1);
    }
  }

  /* Responsive Design */

  /* Large tablets and small desktops (1200px - 1024px) */
  @media (max-width: 1200px) {
    .about-story__container {
      padding: 0 48px;
      gap: 60px;
    }

    .about-story__headline {
      font-size: 46px;
    }

    .about-story__description {
      font-size: 18px;
    }

    .about-story__glow-container {
      width: 350px;
      height: 350px;
    }

    .about-story__glow--primary {
      width: 200px;
      height: 230px;
    }

    .about-story__glow--secondary {
      width: 115px;
      height: 185px;
    }
  }

  /* Tablets and below (1024px and down) */
  @media (max-width: 1024px) {
    .about-story {
      min-height: auto;
      padding: 80px 0;
    }

    .about-story__container {
      grid-template-columns: 1fr;
      gap: 70px;
      padding: 0 40px;
    }

    .about-story__image-wrapper {
      order: 1;
      max-width: 550px;
      margin: 0 auto;
      width: 100%;
    }

    .about-story__content {
      order: 2;
    }

    .about-story__stat-card {
      left: -20px;
      top: -30px;
    }

    .about-story__image-frame {
      width: 100%;
    }

    .about-story__headline {
      font-size: 42px;
      max-width: 100%;
    }

    .about-story__description {
      font-size: 18px;
      max-width: 100%;
    }
  }

  /* Mobile landscape and small tablets (768px and down) */
  @media (max-width: 768px) {
